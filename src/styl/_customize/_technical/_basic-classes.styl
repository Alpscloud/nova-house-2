.disable-hover,
.disable-hover * 
	pointer-events none !important

.gutters
	padding $gutters
	
.gutter
	&-top
		padding-top $gutter-top
		&-sm
			padding-top $gutter-top-sm
	&-bottom
		padding-bottom $gutter-bottom
		&-sm
			padding-bottom $gutter-bottom-sm
	
.w3c
	visibility hidden
	display none
	
.content__wrapper
	overflow hidden
	width 100%
	height 100%

.sect-title
	font 60px $Kudryashov
	line-height 80px
	margin-bottom 50px
	text-transform uppercase
	position relative
	z-index 1
	&-sm
		font-size 30px
		line-height 46px
		margin-bottom 60px
	&-md
		font-size 40px
		line-height 61px
		margin-bottom 45px

.text-center
	text-align center
	
.text-left
	text-align left
	
.text-right
	text-align right
	
.basic-white-color
	color $basic-white-color

.basic-black-color
	color $basic-black-color
	
.light-text-color
	color $light-text-color
	
.dark-text-color
	color $dark-text-color
	
.accent-color
	color $accent-color
	
.content-img
	display block
	margin 0 auto
	max-width 100%
	max-height 100%
	width auto
	height auto
	
.bg
	bg(50%, 50%)
	
.bg-with-overlay
	position relative
	bg(50%, 50%)
	&:before
		pseudo()
		position absolute
		fullSize()
		background-color rgba($bg-overlay-color, $bg-overlay-opacity)
	.container
		position relative
		z-index 2
		
.dark-bg
	background-color $dark-bg
	
.visually-hidden
	position absolute
	clip rect(0 0 0 0)
	width 1px
	height 1px
	margin -1px
	z-index -999
	opacity 0
	visiiblity hidden
	
.thumbnail
	position relative
	overflow hidden
	width 100%
	padding-top 50%
	img
		display block
		position absolute
		position-center()
		width 100%
		height 100%
		object-fit cover
	

.content
	*
		&:last-child
			margin-bottom 0
			
	p
		margin-bottom 25px
			
	h2,h3,h3,h4,h5,h6
		font-family $Kudryashov
		
	h3
		font-size 20px
		line-height 30px
		margin-bottom 15px
		text-transform uppercase
		
	h2
		font-size 30px
		line-height 45px
		margin-bottom 15px
		text-transform uppercase
		
	strong, b
		font-family $Bold
		

	ul, ol
		margin-bottom 25px
		li
			display block
			position relative
			line-height 23px
			
	
				
	ul
		li
			&:before
				content '-'
				
	ol
		counter-reset list
		li
			&:before
				counter-increment list
				content counter(list) ". "
				display inline-block
				margin-right 4px


.color-bg
	background-color $color-bg
	
.block-img
	position absolute
	height 100%
	padding 100px
	top 0
	min-height 700px
	left 100%
	width 720px
	flex-col-center()
	background-color $color-bg
	pointer-events none
	img
		display block
		width 100%
		height 100%
		object-fit cover
	
	&-wrapper
		min-height 700px
		position relative
		max-width 600px
		margin-top -80px
		
		&__left
			margin-left auto
			margin-right 0
			.block-text
				padding-right 0
				padding-left 50px
			.block-img
				left auto
				right 100%
	
		
.block-text
	padding-right 50px
	padding-top 100px
	position relative
	z-index 2
	.content
		img
			width auto
			max-width 100%
	
.decor-side-block
	position relative
	&:after
		height 100%
		pseudo()
		position absolute
		top 0
		right 0
		width 100px
		background-color $basic-white-color
		z-index 1
		transition width .55s ease-in-out
		width 0
	&__left
		&:after
			right auto
			left 0
			
	&.is-animated
		&:after
			width 100px