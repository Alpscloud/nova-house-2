.langs
	margin-right 25px
	li
		display inline-block
		position relative
		padding-right 6px
		&:after
			right 0
			pseudo()
			position absolute
			vertical-center()
			width 1px
			background-color rgba(255, 255, 255, 0.4)
			height 16px
		&:last-child
			padding-right 0
			&:after
				display none
			
		&.current-lang
			a
				color $basic-white-color
	a
		color rgba(255, 255, 255, 0.4)
		&:hover
			color $basic-white-color
			
.phone-link
	font 18px $Kudryashov
	color $basic-white-color
	white-space nowrap
	&:hover
		color $accent-color