.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	color $basic-white-color
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 490px
		background url('../img/textures/popups.jpg') no-repeat 50% / cover
		padding 60px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		text-align left
		box-shadow 0px 5px 60px 0px rgba($basic-black-color, 0.3)
		
		p
			margin-bottom 30px
		
	.btn-close
		position absolute
		top 10px
		right 10px
		
	.form-input
		border-color rgba($basic-white-color, .5)
		color $basic-white-color
		
	.form-group__label--text
		color rgba($basic-white-color, .5)
		
	.form-checkbox
		color rgba($basic-white-color, .5)
		a
			color inherit
		&__label
			input:checked
				~ span
					&:after
						background-color $basic-white-color
		
.popup-tour
	.btn-close
		z-index 10
		top 0
		right 0
		width 60px
		height 60px
		background-color $dark-bg
		svg
			width 20px
			height 20px
			position absolute
			position-center()

.popup-privacy
	.popup__body
		max-width 1200px	
.popup-thanks
	.popup__body
		text-align center
		max-width 370px
		
		
		img
			display block
			margin 0 auto 30px auto
			width 120px
			height 120px
			
	.sect-title
		margin-bottom 30px

