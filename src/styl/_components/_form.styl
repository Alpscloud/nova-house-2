.form
	max-width 400px
	&-input
		display block
		width 100%
		padding 0 0 16px 0
		text-align left
		border-bottom 1px solid rgba(9, 11, 19, 0.15)
		font 14px $Light 
		color $text
		&:hover,
		&:focus
			border-color $accent-color
			
		&.is-error
			border-color red
			
	&-group
		position relative
		margin-bottom 36px
		&:last-child
			margin-bottom 0
			
		&__label
			display block
			position relative
			
			&.is-error
				.form
					&-input
						border-color red
					&-group
						&__error
							opacity 1
							visibility visible
						&__label--text
							top -20px
							font-size 12px
							color red
							
			&.is-active
				.form-group__label--text
					top -20px
					font-size 12px
			
			&--text
				display block
				font 14px $Light
				color $text-color
				transition all .17s ease-in-out
				position absolute
				left 0
				top 0
				transition all .17s ease-in-out
				
		&__error
			display block
			position absolute
			left 0
			top 0
			color red
			font 14px $Light
			transition all .17s ease-in-out
			pointer-events none
			opacity 0
			visibility hidden
			
	&-textarea
		min-height 200px
	



.form
	&-checkbox
		display inline-block
		position relative
		padding-left 25px
		font 14px $Reg
		line-height 19px
		color rgba($text-color, .5)
		a
			color $text-color
			border-bottom 1px solid
			&:hover
				color $accent-color
		&:after
			pseudo()
			position absolute
			vertical-center()
			opacity 0
			transition opacity .17s ease-in-out
			background-color $text-color
			width 6px
			height 6px
			left 4px
		&:before
			pseudo()
			transition all .17s ease-in-out
			position absolute
			left 0
			vertical-center()
			width 14px
			height 14px
			border 1px solid rgba(9, 11, 19, 0.2)
			
		&__label
			display inline-block
			input
				display none
				&:checked
					+ span
						&:before
							border-color $accent-color
						&:after
							opacity 1
							