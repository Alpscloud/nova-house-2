// Loader
.preloader
	display block
	position absolute
	position-center()
	z-index 1001
	perspective 500px
	text-align center
	img
		display block
		margin 0 auto 10px auto
		width 230px
		
	span
		width 1px
		height 12px
		background $basic-white-color
		margin 0 1px
		display inline-block
		animation opacity 1000ms infinite ease-in-out
		&:nth-child(1)
			animation-delay 800ms
		&:nth-child(2)
			animation-delay 600ms
		&:nth-child(3)
			animation-delay 400ms
		&:nth-child(4)
			animation-delay 200ms
		&:nth-child(6)
			animation-delay 200ms
		&:nth-child(7)
			animation-delay 400ms
		&:nth-child(8)
			animation-delay 600ms
		&:nth-child(9)
			animation-delay 800ms
		

		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color $text-color
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0

@keyframes opacity
	0% 
		opacity 1

	50%
		opacity 0

	100% 
		opacity 1
  

@keyframes scaling
	to
		transform scale(1, 1)
					


.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
				
	.sect__promo
		&:before
			animation scaling 8s linear forwards
			
	.advantages
		transform translate(-50%, 0)
		
	.promo-block
		opacity 1
		margin-top 0
		
	.header
		opacity 1
		



